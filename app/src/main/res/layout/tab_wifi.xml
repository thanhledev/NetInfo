<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Wifi State"
            style="@style/LabelStyle"/>
        <TextView
            android:id="@+id/wifiConnectionStateVal"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            style="@style/StatusStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Ip Address"
            style="@style/LabelStyle"/>
        <TextView
            android:id="@+id/wifiIpAddressVal"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            style="@style/StatusStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="MAC Address"
            style="@style/LabelStyle"/>
        <TextView
            android:id="@+id/wifiMacAddressVal"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            style="@style/StatusStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Link speed"
            style="@style/LabelStyle"/>
        <TextView
            android:id="@+id/wifiLinkSpeedVal"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            style="@style/StatusStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Frequency"
            style="@style/LabelStyle"/>
        <TextView
            android:id="@+id/wifiFrequencyVal"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            style="@style/StatusStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="SSID"
            style="@style/LabelStyle"/>
        <TextView
            android:id="@+id/wifiSSIDVal"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            style="@style/StatusStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="BSSID"
            style="@style/LabelStyle"/>
        <TextView
            android:id="@+id/wifiBSSIDVal"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            style="@style/StatusStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="RSSI"
            style="@style/LabelStyle"/>
        <TextView
            android:id="@+id/wifiRSSIVal"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            style="@style/StatusStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="DHCP Info"
            style="@style/LabelStyle"/>
        <TextView
            android:id="@+id/wifiDHCPInfoVal"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="0.7"
            android:gravity="top"
            android:padding="0dp"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:scrollbars="vertical"
            style="@style/StatusStyle"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Config Networks"
            style="@style/LabelStyle"/>
        <TextView
            android:id="@+id/wifiConfiguredNetworksInfoVal"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="0.7"
            android:gravity="top"
            android:padding="0dp"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:scrollbars="vertical"
            style="@style/StatusStyle"/>
    </LinearLayout>
</LinearLayout>